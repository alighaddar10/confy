{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Example Config Schema",
    "type": "object",
    "properties": {
      "database": {
        "type": "object",
        "properties": {
          "host": { "type": "string" },
          "user": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["host", "user"]
      },
      "logging": {
        "type": "object",
        "properties": {
          "level": { "type": "string" },
          "format": { "type": "string" }
        },
        "required": ["level"]
      }
    },
    "required": ["database", "logging"]
  }
  